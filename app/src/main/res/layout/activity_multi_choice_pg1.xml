<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MultiChoicePg1">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

        <ImageView
            android:id="@+id/ImageView"
            android:layout_width="1095dp"
            android:layout_height="1546dp"
            app:srcCompat="@drawable/colorfull_abstract_effect_background_desktop_wallpaper_528914_3767"
            tools:layout_editor_absoluteX="-502dp"
            tools:layout_editor_absoluteY="-376dp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="169dp"
            android:layout_height="55dp"
            android:text="MultiQuizz"
            android:textColor="#E4D1D1"
            android:textSize="34sp"
            tools:layout_editor_absoluteX="121dp"
            tools:layout_editor_absoluteY="58dp" />

        <TextView
            android:id="@+id/questionText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Question goes here"
            android:textColor="#F6F3F3"
            android:textSize="20sp"
            tools:layout_editor_absoluteX="118dp"
            tools:layout_editor_absoluteY="183dp" />

        <Button
            android:id="@+id/trueButton"
            android:layout_width="242dp"
            android:layout_height="67dp"
            android:text="True"
            android:textSize="16sp"
            tools:layout_editor_absoluteX="83dp"
            tools:layout_editor_absoluteY="315dp" />

        <Button
            android:id="@+id/falseButton"
            android:layout_width="243dp"
            android:layout_height="62dp"
            android:text="False"
            android:textSize="16sp"
            tools:layout_editor_absoluteX="83dp"
            tools:layout_editor_absoluteY="441dp" />

        <TextView
            android:id="@+id/feedbackText"
            android:layout_width="108dp"
            android:layout_height="18dp"
            android:text="&quot;&quot;"
            android:textAlignment="center"
            android:textColor="#EFEEEE"
            android:textSize="16sp"
            tools:layout_editor_absoluteX="140dp"
            tools:layout_editor_absoluteY="556dp" />

        <Button
            android:id="@+id/nextButton"
            android:layout_width="207dp"
            android:layout_height="50dp"
            android:text="Next"
            android:textColor="#FFF8F8"
            android:visibility="gone"
            tools:layout_editor_absoluteX="101dp"
            tools:layout_editor_absoluteY="653dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>