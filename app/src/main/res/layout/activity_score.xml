<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity_score">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="1095dp"
            android:layout_height="1546dp"
            app:srcCompat="@drawable/colorfull_abstract_effect_background_desktop_wallpaper_528914_3767"
            tools:layout_editor_absoluteX="-535dp"
            tools:layout_editor_absoluteY="-389dp" />

        <TextView
            android:id="@+id/scoreMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your score : 0"
            android:textAlignment="center"
            android:textColor="#F4EEEE"
            android:textSize="20sp"
            tools:layout_editor_absoluteX="158dp"
            tools:layout_editor_absoluteY="85dp" />

        <Button
            android:id="@+id/reviewButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Review Answers"
            tools:layout_editor_absoluteX="128dp"
            tools:layout_editor_absoluteY="166dp" />

        <Button
            android:id="@+id/exitButton"
            android:layout_width="153dp"
            android:layout_height="45dp"
            android:text="Exit"
            tools:layout_editor_absoluteX="128dp"
            tools:layout_editor_absoluteY="267dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>